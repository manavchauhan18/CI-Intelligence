# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ci_intelligence

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# Security
HMAC_SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Orchestrator
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8001

# Agents
DIFF_AGENT_HOST=0.0.0.0
DIFF_AGENT_PORT=8100

INTENT_AGENT_HOST=0.0.0.0
INTENT_AGENT_PORT=8101

SECURITY_AGENT_HOST=0.0.0.0
SECURITY_AGENT_PORT=8102

PERFORMANCE_AGENT_HOST=0.0.0.0
PERFORMANCE_AGENT_PORT=8103

TEST_AGENT_HOST=0.0.0.0
TEST_AGENT_PORT=8104

ARBITER_AGENT_HOST=0.0.0.0
ARBITER_AGENT_PORT=8105

# Observability
ENABLE_TELEMETRY=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090

# Agent Configuration
AGENT_TIMEOUT_SECONDS=300
ARBITER_WAIT_TIMEOUT_SECONDS=600
MAX_RETRIES=3
RETRY_BACKOFF_MULTIPLIER=2
